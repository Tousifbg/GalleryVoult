<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:qwerjk="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="20dp">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/confirm_dialog_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/ic_baseline_error_outline_24"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:fontFamily="@font/g_light"
                    android:text="Are You Sure?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/g_light"
                    android:text="Your media files will be restored \nto Gallery!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:paddingHorizontal="20dp"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:id="@+id/btnCancel"
                    android:text="CANCEL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/g_light"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/cancel_shape"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="35dp"
                    android:id="@+id/btnOkay"
                    android:text="YES"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/g_light"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/ok_shape"
                    />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>



</LinearLayout>